<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity"
    android:background="@drawable/mainpage"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The Body Mass Ratio is"
        android:textSize="30dp"
        android:textColor="#FFFF0000"
        android:id="@+id/tv"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#FFAA0000"
        android:layout_gravity="center"
        android:paddingTop="200dp"
        android:paddingBottom="50dp"
        android:text="Your Food details"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:textSize="20dp"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_gravity="center"
        android:id="@+id/btmain"
        />
</LinearLayout>
