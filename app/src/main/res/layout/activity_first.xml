<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity"
    android:background="@drawable/foodie"
    android:weightSum="1">
    <TextView
        android:layout_width="fill_parent"
        android:text="Enter Your Details"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Male or Female"
        android:inputType="textCapCharacters"
        android:id="@+id/entry0"/>



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Height"
        android:inputType="numberDecimal"
        android:id="@+id/entry1"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Weight"
        android:inputType="numberDecimal"
        android:id="@+id/entry2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Age"
        android:inputType="numberDecimal"
        android:id="@+id/entry3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="center"
        android:id="@+id/buttonentry"
        />

</LinearLayout>
